<!DOCTYPE html>
<html>
  <head>
    <title>TomFlix</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <script type="text/javascript">
      window.splash = "<%= image_url('splash_hd.jpg') %>";
      window.logo = "<%= image_url('logo.png') %>";
      window.github = "<%= image_url('github_icon.png') %>";
      window.linkedin = "<%= image_url('linkedin_logo.png') %>";
      window.notification = "<%= image_url('notificationicon.png') %>";
      window.search = "<%= image_url('searchicon.png') %>";
      window.usericon = "<%= image_url('usericon.png') %>";
      window.downcaret = "<%= image_url('down-caret.png') %>";
      window.upcaret = "<%= image_url('up-caret.png') %>";
      window.inceptionlogo = "<%= image_url('inceptionlogo.png') %>";
      window.playicon = "<%= image_url('playbutton.png') %>";
      window.backindexarrow = "<%= image_url('backindexarrow.png') %>";
      window.soundon = "<%= image_url('soundon.png') %>";
      window.soundoff = "<%= image_url('soundoff.png') %>";
      window.minions = "<%= image_url('minions.png') %>";
      window.office = "<%= image_url('theofficelogo.png') %>";
      window.addlist = "<%= image_url('add.png') %>";
      window.removelist = "<%= image_url('check.png') %>";
      window.indexListAdd = "<%= image_url('mylistindexAdd.png') %>"
      window.indexListRemove = "<%= image_url('mylistindexRemove.png') %>"
    </script>

    <%= favicon_link_tag asset_path('favicon.png') %>

    <% if current_user %>
      <script>
        window.currentUser = {
          "id": "<%= current_user.id %>",
          "email": "<%= current_user.email %>"
        };
      </script>
    <% end %>

  </head>

  <body>
    <%= yield %>
  </body>
</html>
